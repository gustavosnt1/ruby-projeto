<h1><%= @tournament.name %></h1>
<p>Jogo: <%= @tournament.game %></p>
<p>Organizer: <%= @tournament.organizer_id %></p>

<% if user_signed_in? %>
  <% # Verifica se o usuário já está inscrito no torneio %>
  <% if @tournament.registrations.exists?(user_id: current_user.id) %>
  <%= button_to "Cancelar Inscrição", tournament_registration_path(@tournament, @tournament.registrations.find_by(user_id: current_user.id)), method: :delete, data: { confirm: "Tem certeza que deseja cancelar a inscrição?" }, class: "btn btn-danger" %>
  <% else %>
    <%= button_to "Participar", tournament_registrations_path(@tournament), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>